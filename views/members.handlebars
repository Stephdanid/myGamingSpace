<nav class="navbar navbar-light bg-light">
    <div class="navbar-header">
        <a class="navbar-brand" href="/logout">
            Logout
        </a>
    </div>
    <div class="navbar-header">
        <a class="navbar-brand" href="/wishlist">
            Profile
        </a>
    </div>
    <div class="container-fluid">
        <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="searchedGame">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Welcome <span class="member-name"></span></h2>
            <h3>My games list</h3>
            <ul>
                {{#each myGamesList}}
                <li>
                    <p>Name: {{name}}</p>
                    <p>About: {{summary}}</p>
                    <a href="{{url}}">Check out more about this game!</a>
                </li>
                <button type="submit" class="btn btn-default" id="removeGame">Delete from my wishlist!</button>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript" src="js/members.js"></script>